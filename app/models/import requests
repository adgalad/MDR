import requests
from PIL import Image
from io import StringIO, BytesIO


def validateImage(url):
    
    r = requests.get('url')
    try:
        im = Image.open(StringIO(r.content))
    except:
        im = None
    
    if not im:
        try:
            im = Image.open(BytesIO(r.content))
        except:
            return False

    return True

print(validateImage('http://agrocognitive.com/images/favicon/fill/favicon-128.png'))
print(validateImage('https://www.gravatar.com/avatar/e86681e49622d52817b36fd2a4c936b7?s=328&d=identicon&r=PG'))
print(validateImage('https://google.com'))